<form method="post" action="/new" class="form">
  <div class="form__container">
    <h1 class="form__heading">New Message</h1>

    <div class="form__field">
      <label for="author-name" class="form__label">Author's Name</label>
      <input type="text" name="authorName" id="author-name" class="form__input" required>
    </div>

    <div class="form__field">
      <label for="message" class="form__label">Message</label>
      <textarea name="message" id="message" class="textarea form__input" required></textarea>
    </div>

    <button type="submit" class="form__submit">Add Message</button>
  </div>
</form>