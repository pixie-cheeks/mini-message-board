<form method="post" action="/new" class="form">
  <h1>New Message</h1>
  <div class="form__field">
    <label for="author-name">Author's Name</label>
    <input type="text" name="authorName" id="author-name" required>
  </div>
  <div class="form__field">
    <label for="message">Message</label>
    <textarea name="message" id="message" class="textarea" required></textarea>
  </div>
  <button type="submit">Add Message</button>
</form>