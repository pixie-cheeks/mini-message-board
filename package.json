{
  "name": "mini-message-board",
  "version": "1.0.0",
  "type": "module",
  "main": "src/app.js",
  "private": true,
  "engines": {
    "node": ">=21.2.0"
  },
  "scripts": {
    "start": "node .",
    "watch": "node --watch .",
    "lint": "eslint",
    "lint:css": "stylelint .",
    "prepare": "husky",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "dotenv": "16.5.0",
    "ejs": "3.1.10",
    "express": "5.1.0"
  },
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "1.8.0",
    "@pixie-cheeks/eslint-config": "13.0.0",
    "@pixie-cheeks/stylelint-config": "4.0.0",
    "@types/express": "5.0.2",
    "@types/node": "22.15.21",
    "cspell": "9.0.2",
    "eslint": "9.27.0",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "prettier": "3.5.3",
    "prettier-plugin-ejs": "1.0.3",
    "stylelint": "16.19.1"
  },
  "stylelint": {
    "extends": [
      "@pixie-cheeks/stylelint-config",
      "@pixie-cheeks/stylelint-config/bem"
    ],
    "ignoreFiles": [
      "**/*",
      "!src/**/*.css"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-ejs",
      "@awmottaz/prettier-plugin-void-html"
    ]
  },
  "cspell": {
    "version": "0.2",
    "language": "en,en-GB,lorem",
    "allowCompoundWords": true,
    "dictionaries": [
      "html"
    ],
    "words": [
      "awmottaz",
      "esbuild",
      "unrs"
    ],
    "ignorePaths": [
      "dist",
      "node_modules",
      "pnpm-lock.yaml"
    ]
  },
  "lint-staged": {
    "*": [
      "cspell --no-must-find-files",
      "prettier --write --ignore-unknown"
    ],
    "*.js": [
      "eslint --max-warnings 0"
    ],
    "*.css": [
      "stylelint"
    ]
  }
}
